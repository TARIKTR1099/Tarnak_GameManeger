{
  "name": "gamemanager",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.cjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/TARIKTR1099/Tarnak_GameManeger.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.gamemanager.app",
    "productName": "GameManager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/GameManagerBackend.exe",
        "to": "extraResources/GameManagerBackend.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "TARIKTR1099",
        "repo": "Tarnak_GameManeger"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GameManager",
      "uninstallDisplayName": "GameManager"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "electron-updater": "^6.1.8",
    "framer-motion": "^11.0.8",
    "lucide-react": "^0.344.0",
    "openai": "^6.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "vite": "^5.2.0",
    "wait-on": "^9.0.3"
  }
}